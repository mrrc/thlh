{
  "manifest_version": 2,
  "applications": {
    "gecko": {
      "id": "thlh-addon@something.sdf"
    }
  },
  "name": "Tabs Hoarder's Little Helper",
  "version": "1.0.1",
  "description": "Little help for managing a lot of tabs...",
	"background": {
		"scripts": ["background.js"]
	},
  "permissions": ["tabs", "storage"],
	"browser_action": {
    "browser_style": true,
    "default_icon": "icons/icon-128.png",
    "default_title": "Tabs Hoarder's Little Helper",
    "default_popup": "popup/list.html"
	}
}
